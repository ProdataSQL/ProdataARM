{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "defaultValue": null,
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name Of VM"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS13_v2",
      "allowedValues": [
        "Standard_D1",
        "Standard_D2",
        "Standard_D3",
        "Standard_D4",
        "Standard_DS13_v2"
      ],
      "metadata": {
        "description": "Size of VM"
      }
    },
    "StorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Premium_LRS"
      ]
    },
    "StorageTier": {
      "type": "string",
      "defaultValue": "Premium",
      "allowedValues": [
        "Standard",
        "Premium"
      ]
    },
    "DiskCaching": {
      "type": "String",
      "defaultValue": "ReadOnly",
      "allowedValues": [
        "ReadOnly",
        "ReadWrite"
      ]
    },
    "IPAddressesType": {
      "defaultValue": "Static",
      "type": "String",
      "allowedValues": [
        "Dynamic",
        "Static"
      ]
    },
    "IPAdress": {
      "defaultValue": "10.0.0.4",
      "type": "String"
    },
    "sizeOf_E_Drive": {
      "type": "string",
      "defaultValue": "127",
      "metadata": {
        "description": "Size of E:/ drive in GB"
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'saddiskvm')]",
    "addressPrefix": "10.0.0.0/16",
    "nicName": "[concat(parameters('vmName'),'_nic')]",
    "apiVersion": "2015-06-15",
    "publicIPAddressName": "[concat(parameters('vmName'),'_PublicIP')]",
    "virtualNetworkName": "[concat(parameters('vmName'),'_VNET')]",
    "networkSecurityGroups": "[concat(parameters('vmName'),'_NSG')]",
    "imagePublisher": "MicrosoftSQLServer",
    "imageOffer": "SQL2016SP1-WS2016",
    "imageSKU": "SQLDEV",
    "imageVersion": "latest",
    "subnet1Name": "Subnet-1",
    "subnet1Prefix": "10.0.0.0/24",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('virtualNetworkName'))]",
    "vmStorageAccountContainerName": "vhds",
    "subnet1Ref": "[concat(variables('vnetID'),'/subnets/',variables('subnet1Name'))]",
    "backslah": "\\"
  },
  "resources": [
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/Prodata_ARM/providers/Microsoft.Compute/virtualMachines/EstebanVMSQL'.",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "apiVersion": "2015-06-15",
      "location": "northeurope",
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS13_v2"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftSQLServer",
            "offer": "SQL2016SP1-WS2016",
            "sku": "SQLDEV",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('vmName'),'_C_Drive')]",
            "createOption": "FromImage",
            "vhd": {
              "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), variables('apiVersion')).primaryEndpoints.blob, variables('vmStorageAccountContainerName'),'/','osDisk1.vhd')]"
            },
            "caching": "ReadWrite"
          },
          "dataDisks": [
            {
              "lun": 0,
              "name": "[concat(parameters('vmName'),'_E_Drive')]",
              "createOption": "Empty",
              "vhd": {
                "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')),  variables('apiVersion')).primaryEndpoints.blob, variables('vmStorageAccountContainerName'),'/',parameters('vmName'),'dataDisk1.vhd')]"
              },
              "caching": "[parameters('DiskCaching')]",
              "diskSizeGB": "[parameters('sizeOf_E_Drive')]"
            },
            {
              "lun": 1,
              "name": "[concat(parameters('vmName'),'-disk-2')]",
              "createOption": "Empty",
              "vhd": {
                "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), variables('apiVersion')).primaryEndpoints.blob, variables('vmStorageAccountContainerName'),'/',parameters('vmName'),'dataDisk2.vhd')]"
              },
              "caching": "ReadOnly",
              "diskSizeGB": 1023
            }
          ]
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "windowsConfiguration": {
            "provisionVMAgent": true,
            "enableAutomaticUpdates": true
          },
          "secrets": [],
          "adminPassword": "[parameters('adminPassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
            }
          ]
        }
      },
      "resources": [],
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('vmStorageAccountContainerName'))]"
      ]
    },
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/Prodata_ARM/providers/Microsoft.Network/networkInterfaces/estebanvmsql513'.",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('nicName')]",
      "apiVersion": "2016-03-30",
      "location": "northeurope",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAddress": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('IPAdress'))]",
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
              },
              "subnet": {
                "id": "[variables('subnet1Ref')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableIPForwarding": false,
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroups'))]"
        }
      },
      "resources": [],
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks',variables('virtualNetworkName'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups',variables('networkSecurityGroups'))]"
      ]
    },
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/Prodata_ARM/providers/Microsoft.Network/networkSecurityGroups/EstebanVMSQL-nsg'.",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "variables('networkSecurityGroups')",
      "apiVersion": "2016-03-30",
      "location": "northeurope",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp",
            "properties": {
              "protocol": "TCP",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          }
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/Prodata_ARM/providers/Microsoft.Network/publicIPAddresses/EstebanVMSQL-ip'.",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('publicIPAddressName')]",
      "apiVersion": "2016-03-30",
      "location": "northeurope",
      "properties": {
        "publicIPAllocationMethod": "[parameters('IPAddressesType')]",
        "idleTimeoutInMinutes": 4
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/Prodata_ARM/providers/Microsoft.Network/virtualNetworks/EstebanVM_VNET'.",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('virtualNetworkName')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('subnet1Prefix')]"
            }
          }
        ]
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/prodata_arm/providers/Microsoft.Storage/storageAccounts/prodataarmdiag281'.",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[parameters('storageAccounts_prodataarmdiag281_name')]",
      "apiVersion": "2016-01-01",
      "location": "northeurope",
      "tags": {},
      "properties": {},
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "Generalized from resource: '/subscriptions/5e960efa-b193-495d-9767-e5191a86441c/resourceGroups/prodata_arm/providers/Microsoft.Storage/storageAccounts/prodataarmdisks638'.",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Premium_LRS",
        "tier": "Premium"
      },
      "kind": "Storage",
      "name": "[parameters('storageAccounts_prodataarmdisks638_name')]",
      "apiVersion": "2016-01-01",
      "location": "northeurope",
      "tags": {},
      "properties": {},
      "resources": [],
      "dependsOn": []
    }
  ]
}